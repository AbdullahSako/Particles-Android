<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.sako.particles.ui.sparkles.SparkleView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:sparkleViewBackgroundColor="#121212"
        app:particlesCount="100"
        app:particlesColor="@color/white"
        app:enableBottomFadingEdge="true"
        app:enableTopFadingEdge="true"
        app:enableLeftFadingEdge="true"
        app:enableRightFadingEdge="true"
        app:enableTouchToAccelerate="true"
        app:fadeWidth="100"
        app:fadeColor="#121212"
        />


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:contentDescription="Next page"
        android:id="@+id/sparklesMainNextFab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:src="@drawable/ic_arrow_forward"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>