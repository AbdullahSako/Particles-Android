<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#121212"

    >

    <com.sako.particles.ui.sparkles.SparklesView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        app:enableTouchToAccelerate="true"
        app:particlesColor="#FF0000"
        app:maxSize="10"
        app:maxParticleConnectDistance="150"
        app:enableParticleConnect="true"
        app:connectLineColor="#00FFE1"
        app:particlesCount="150" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:contentDescription="Previous page"
        android:id="@+id/sparklesConnectPrevFab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="20dp"
        android:src="@drawable/ic_arrow_back"
        android:scaleType="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>